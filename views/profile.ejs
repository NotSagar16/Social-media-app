<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-zinc-900 text-white py-5">
      <div class="nav flex justify-between items-center px-4">
        <h3 class="text-3xl"><%= user.username %></h3>
        <div class="icons flex gap-5">
          <a href="/upload"><i class="text-[1.4rem] ri-add-box-line"></i></a>
          <i class="text-[1.4rem] ri-menu-line"></i>
        </div>
      </div>
      <div class="flex-col justify-center items-center pl-6 pr-[12vw] mt-8">
        <div class="w-full h-full flex justify-between items-center bg-sky-100 flex gap-x-8 overflow-hidden my-3 bg-zinc-900">
          <img class="w-[19vw] h-[19vw] rounded-full object-cover ml-3" src="/images/uploads/<%= user.picture %>" alt="">
          <button class="bg-red-500 h-[40px] items-center text-white font-bold py-2 px-4 rounded">
            <a href="/logout">Logout</a>
          </button>
        </div>
      
        <div class="stats flex gap-5 items-center justify-evenly">
          <div class="flex flex-col items-center justify-center">
            <h3><%= user.posts.length %></h3>
            <h4>Posts</h4>
          </div>
          <div class="flex flex-col items-center justify-center">
            <h3><%= user.followers.length %></h3>
            <h4><a href="/followers">Followers</a></h4>
          </div>
          <div class="flex flex-col items-center justify-center">
            <h3><%= user.following.length %></h3>
            <h4><a href="/following">Followings</a></h4>
          </div>
        </div>
      </div>
      <div class="dets flex flex-col items-center px-6 mt-5">
        <h3 class="text-xl mb-1"><%= user.name %></h3>
        <p class="text-lg tracking-tight opacity-50"><%= user.bio ?? "You have not set anything yet, (click edit profile to set)" %></p>
      </div>
      <div class="px-6 mt-5">
        <a class="px-3 py-2 bg-zinc-800 text-xs rounded-md" href="/edit">Edit Profile</a>
      </div>
      <div class="posts w-full flex gap-1 py-2 mt-5 flex-wrap">
        <% if(user.posts.length>0){ %>
          <% user.posts.reverse().forEach(function(post){ %>
            <div class="post w-[32.5%] h-32">
              <img class="w-full h-full object-cover" src="/images/uploads/<%= post.picture %>" alt="">
            </div>
          <% }) %>
        <% } else { %>
          <div class="w-full flex justify-center items-center min-h-[20vh]">
            <small class="opacity-50">no posts yet.</small>
          </div>
        <% } %>
      </div>
  </div>
<% include ./partials/footer.ejs %>